{
    "extends": "strongloop",
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "comma-dangle": 0,
        "max-len": 0,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "ignore",
                "named": "ignore",
                "asyncArrow": "ignore"
            }
        ],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": "function",
                "next": "*"
            }
        ]
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        },
        "requireConfigFile": false
    },
    "env": {
        "es6": true
    }
}